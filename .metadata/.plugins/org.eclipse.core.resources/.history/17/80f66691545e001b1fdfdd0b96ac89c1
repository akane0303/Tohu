/* USER CODE BEGIN 0 */
int16_t get_enc0(void){
	int16_t count=0;
	uint16_t encbuff=TIM1->CNT;
	TIM1->CNT=0;

	if(encbuff>32767){
		count=(int16_t)encbuff;
	}
	else{
		count=(int16_t)encbuff;
	}
	return count;
}

/* USER CODE END 0 */

